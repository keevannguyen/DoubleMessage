<div class="container-fluid h-100 mainBackground">
    <div class="row align-items-center h-100">

      <div class="container col-md-4">
        <div class="card p-5">
          <img class="mainLogo mx-auto d-block" src="/assets/messageLogo.png">
          <h1 class="text-center">Double Message</h1>
          <hr class="my-4">
          <article class="card-body">
            <a href="/login" class="float-right btn btn-green">Login</a>
            <h4 class="card-title mb-4 mt-1">Sign Up</h4>
            <hr class="my-4">
            <form method="POST">
              <div class="form-group">
                  <div class="input-group">
                		<div class="input-group-prepend">
                		    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                		 </div>
                		<input name="username" class="form-control" placeholder="Username" type="text">
                	</div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-prepend">
                      <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                   </div>
                    <input name="password" class="form-control" placeholder="Password" type="password">
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-prepend">
                      <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                   </div>
                    <input name="passwordRepeat" class="form-control" placeholder="Confirm Password" type="password">
                </div>
              </div>
              <div class="row">
                  <div class="col-md-6">
                      <div class="form-group">
                          <button type="submit" class="btn btn-green btn-block">Sign Up</button>
                      </div>
                  </div>
              </div>
            </form>
          </article>
        </div>
      </div>

    </div>
</div>
