<div class="container-fluid h-100 mainBackground">
    <div class="row align-items-center h-100">

      <div class="container col-md-5">
        <div class="card p-5">
          <h1 class="text-center">Send Message to {{contactName}}</h1>
          <hr class="my-4">
          <article class="card-body">
            <form method="POST">

              <div class="form-group">
                  <textarea class="form-control" id="messageContents" name="message" placeholder="Message Contents..." maxlength="670" rows="10"></textarea>
                  <span class="figure-caption" id="charsLeft">670 Characters Left...</span>
              </div>

              <hr class="my-4">

              <div class="row">
                  <div class="col-md-12">
                      <div class="form-group">
                          <button type="submit" class="btn btn-green mr-2">Send Message</button>
                          <a class="btn btn-default float-right" href="/contacts">Cancel</a>
                      </div>
                  </div>
              </div>

            </form>
          </article>
        </div>
      </div>

    </div>
</div>


<script>
  $("#messageContents").keyup( function(event){
    if($("#messageContents").val().length > 670)
    {
        return false;
    }
    $("#charsLeft").text((670-$("#messageContents").val().length) + " Characters Left...");
  });
  $('html').keyup(function(event){
    if(event.keyCode == 8)
    {
      $("#charsLeft").text((670-$("#messageContents").val().length) + " Characters Left...");
    }
  });
</script>
